<Page x:Class="students.Pages.DataOutput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DataOutput">

    <Grid Background="#f0e3fc">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Поиск:" 
                   Width="100" 
                   Foreground="#FF5427D4" 
                   Height="22" 
                   FontWeight="Bold" 
                   FontFamily="Gill Sans Ultra Bold" 
                   FontSize="14"/>
                <TextBox x:Name="TextSearch" 
                 Width="200" 
                 Height="22" 
                 FontSize="16" 
                 Margin="0,0,0,5"
                 TextChanged="TextSearch_TextChanged">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" 
                                        BorderBrush="#FF5427D4" 
                                        BorderThickness="1" 
                                        CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Сортировка:" 
                   Width="100" 
                   Foreground="#FF5427D4" 
                   Height="22" 
                   FontWeight="Bold" 
                   FontFamily="Gill Sans Ultra Bold" 
                   FontSize="14"/>
                <ComboBox x:Name="ComboSort" 
                  Width="200" 
                  Height="22" 
                  FontSize="16"
                  Margin="0,0,0,5"
                  SelectionChanged="ComboSort_SelectionChanged">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <Border x:Name="border"
                                            Background="White"
                                            BorderBrush="#FF5427D4"
                                            BorderThickness="1"
                                            CornerRadius="10"/>

                                            <ContentPresenter x:Name="contentPresenter"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="5,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                            <ToggleButton x:Name="toggleButton"
                                                  Grid.ColumnSpan="2"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"/>

                                            <Path x:Name="arrow"
                                          Fill="#FF5427D4"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,5,0"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>

                                            <Popup x:Name="PART_Popup"
                                           AllowsTransparency="True"
                                           Placement="Bottom"
                                           Focusable="False"
                                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                           PopupAnimation="Slide">
                                                <Border CornerRadius="10"
                                                BorderBrush="#FF5427D4"
                                                BorderThickness="1"
                                                Background="White">
                                                    <ScrollViewer>
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                    <ComboBoxItem Content="Не сортировать" IsSelected="True"/>
                    <ComboBoxItem Content="По дате (сначала новые)"/>
                    <ComboBoxItem Content="По дате (сначала старые)"/>
                    <ComboBoxItem Content="По студенту (А-Я)"/>
                    <ComboBoxItem Content="По студенту (Я-А)"/>
                    <ComboBoxItem Content="По предмету (А-Я)"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Группа:" 
                   Width="100" 
                   Foreground="#FF5427D4" 
                   Height="22" 
                   FontWeight="Bold" 
                   FontFamily="Gill Sans Ultra Bold" 
                   FontSize="14"/>
                <ComboBox x:Name="ComboGroup" 
                  Width="200" 
                  Height="22" 
                  FontSize="16"
                  Margin="0,0,0,5"
                  SelectionChanged="ComboFilter_SelectionChanged">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ComboBox">
                                        <Grid>
                                            <Border x:Name="border"
                                            Background="White"
                                            BorderBrush="#FF5427D4"
                                            BorderThickness="1"
                                            CornerRadius="10"/>

                                            <ContentPresenter x:Name="contentPresenter"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                      Margin="5,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>

                                            <ToggleButton x:Name="toggleButton"
                                                  Grid.ColumnSpan="2"
                                                  Background="Transparent"
                                                  BorderBrush="Transparent"
                                                  Focusable="False"
                                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  ClickMode="Press"/>

                                            <Path x:Name="arrow"
                                          Fill="#FF5427D4"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Center"
                                          Margin="0,0,5,0"
                                          Data="M 0 0 L 4 4 L 8 0 Z"/>

                                            <Popup x:Name="PART_Popup"
                                           AllowsTransparency="True"
                                           Placement="Bottom"
                                           Focusable="False"
                                           IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                           PopupAnimation="Slide">
                                                <Border CornerRadius="10"
                                                BorderBrush="#FF5427D4"
                                                BorderThickness="1"
                                                Background="White">
                                                    <ScrollViewer>
                                                        <ItemsPresenter/>
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <Button Grid.Column="3" 
                    Content="Сформировать отчет" 
                    Click="GenerateReportButton_Click"
                    Foreground="#FF5427D4"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Gill Sans Ultra Bold"
                    FontSize="14"
                    Padding="5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="300,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF7F5FDB"/>
                                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <ListView x:Name="listAttendance" Grid.Row="1" Margin="10" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Студент" Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                            <Run Text="{Binding students.last_name}"/>
                            <Run Text="{Binding students.first_name}"/>
                            <Run Text="{Binding students.middle_name}"/>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Группа" Width="90" DisplayMemberBinding="{Binding students.groups.group_number}"/>
                    <GridViewColumn Header="Предмет" Width="170" DisplayMemberBinding="{Binding subjects.subject_name}"/>
                    <GridViewColumn Header="Дата" Width="80" DisplayMemberBinding="{Binding date, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Присутствие" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding visits.visit_name}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding visits.visit_name}" Value="True">
                                                    <Setter Property="Text" Value="Присутствовал"/>
                                                    <Setter Property="Foreground" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding presence}" Value="False">
                                                    <Setter Property="Text" Value="Отсутствовал"/>
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Оценка" Width="80" DisplayMemberBinding="{Binding grade}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Добавить запись" Width="150" Height="30" Margin="0,0,10,0"
            FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="White" Background="#FF5427D4"
            Click="AddButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF5427D4" 
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="1" Content="Редактировать" Width="135" Height="30" Margin="0,0,10,0"
            FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="White" Background="#FF5427D4"
            Click="EditButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF5427D4" 
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="2" Content="Удалить" Width="90" Height="30" Margin="0,0,10,0"
            FontFamily="Gill Sans Ultra Bold" FontSize="14" Foreground="White" Background="#FF5427D4"
            Click="DeleteButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="#FF5427D4" 
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button Grid.Column="4" Content="Выход" 
            Click="ExitButton_Click"
            Foreground="#FF5427D4"
            Background="Transparent"
            BorderThickness="0"
            FontFamily="Gill Sans Ultra Bold"
            FontSize="14"
            Padding="5"
            HorizontalAlignment="Right">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF7F5FDB"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>