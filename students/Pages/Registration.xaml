<Page x:Class="students.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:students.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="#f0e3fc">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Введите фамилию:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               FontFamily="Gill Sans Ultra Bold"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="TBSurname" 
                             Width="200" 
                             Height="22" 
                             FontSize="16"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                    BorderBrush="#FF5427D4" 
                                                    BorderThickness="1" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Введите имя:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               FontFamily="Gill Sans Ultra Bold"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="TBName" 
                             Width="200" 
                             Height="22" 
                             FontSize="16"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                    BorderBrush="#FF5427D4" 
                                                    BorderThickness="1" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Введите отчество:" 
                       Foreground="#FF5427D4" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       FontFamily="Gill Sans Ultra Bold"
                       Margin="0,0,0,5"/>
                    <TextBox x:Name="TBMiddleName" 
                         Width="200" 
                         Height="22" 
                         FontSize="16"
                         Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                BorderBrush="#FF5427D4" 
                                BorderThickness="1" 
                                CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Введите эл. почту:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               FontFamily="Gill Sans Ultra Bold"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="TBEmail" 
                             Width="200" 
                             Height="22" 
                             FontSize="16"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                    BorderBrush="#FF5427D4" 
                                                    BorderThickness="1" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Введите номер телефона:" 
                        Foreground="#FF5427D4" 
                        FontWeight="Bold" 
                        FontSize="14" 
                        FontFamily="Gill Sans Ultra Bold"
                        Margin="0,0,0,5"/>

                    <TextBox x:Name="TBTelephone" 
                         Width="200" 
                         Height="22" 
                         FontSize="16"
                         Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                BorderBrush="#FF5427D4" 
                                BorderThickness="1" 
                                CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock Text="Введите логин:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontFamily="Gill Sans Ultra Bold" 
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="TBLogin" 
                             Width="200" 
                             Height="22" 
                             FontSize="16"
                             Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                    BorderBrush="#FF5427D4" 
                                                    BorderThickness="1" 
                                                    CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Введите пароль:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontFamily="Gill Sans Ultra Bold" 
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <TextBox x:Name="TBPassword" 
         Width="200" 
         Height="22" 
         FontSize="16"
         Margin="0,0,0,5">
                        <TextBox.Style>
                            <Style TargetType="{x:Type TextBox}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Border Background="White" 
                                BorderBrush="#FF5427D4" 
                                BorderThickness="1" 
                                CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <TextBlock Text="Введите пароль повторно:" 
                               Foreground="#FF5427D4" 
                               FontWeight="Bold" 
                               FontFamily="Gill Sans Ultra Bold" 
                               FontSize="14"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PBpassword" 
             Width="200" 
             Height="22" 
             FontSize="16"
             Margin="0,0,0,5">
                        <PasswordBox.Style>
                            <Style TargetType="PasswordBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="PasswordBox">
                                            <Border Background="White" 
                                BorderBrush="#FF5427D4" 
                                BorderThickness="1" 
                                CornerRadius="10">
                                                <ScrollViewer x:Name="PART_ContentHost"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </PasswordBox.Style>
                    </PasswordBox>

                    <TextBlock Text="Выберите квалификацию:" 
                           Foreground="#FF5427D4" 
                           FontWeight="Bold" 
                           FontFamily="Gill Sans Ultra Bold" 
                           FontSize="14"
                           Margin="0,0,0,5"/>
                    <ComboBox x:Name="CBQualification" 
          Width="200" 
          Height="22" 
          FontSize="16"
          Margin="0,0,0,5"
          DisplayMemberPath="qualification_name"
          SelectedValuePath="id_qualification">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <Border x:Name="border"
                                    Background="White"
                                    BorderBrush="#FF5427D4"
                                    BorderThickness="1"
                                    CornerRadius="10"/>

                                                <ContentPresenter x:Name="contentPresenter"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="5,0"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>

                                                <ToggleButton x:Name="toggleButton"
                                          Grid.ColumnSpan="2"
                                          Background="Transparent"
                                          BorderBrush="Transparent"
                                          Focusable="False"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"/>

                                                <Path x:Name="arrow"
                                  Fill="#FF5427D4"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Margin="0,0,5,0"
                                  Data="M 0 0 L 4 4 L 8 0 Z"/>

                                                <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Placement="Bottom"
                                   Focusable="False"
                                   IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                   PopupAnimation="Slide">
                                                    <Border CornerRadius="10"
                                        BorderBrush="#FF5427D4"
                                        BorderThickness="1"
                                        Background="White">
                                                        <ScrollViewer>
                                                            <ItemsPresenter/>
                                                        </ScrollViewer>
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="ButtonZareg" 
                    Width="200" 
                    Height="30" 
                    Content="Зарегистрироваться" 
                    FontFamily="Gill Sans Ultra Bold" 
                    FontSize="14" 
                    Foreground="White" 
                    Background="#FF5427D4"
                    Click="ButtonRegist_Click"
                    Margin="0,0,20,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="#FF5427D4" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>

            <Button x:Name="ButtonExit" 
                    Width="200" 
                    Height="30" 
                    Content="Выйти" 
                    FontFamily="Gill Sans Ultra Bold" 
                    FontSize="14" 
                    Foreground="White" 
                    Click="ButtonExit_Click"
                    Background="#FF5427D4">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            BorderBrush="#FF5427D4" 
                                            BorderThickness="1" 
                                            CornerRadius="10" 
                                            Padding="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>

        <TextBlock Grid.Row="0" 
                   Text="Регистрация" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Center" 
                   Foreground="#FF5427D4" 
                   FontSize="20" 
                   Margin="0,20,0,0"
                   TextWrapping="Wrap" 
                   TextAlignment="Center" 
                   FontWeight="Bold" 
                   FontFamily="Gill Sans Ultra Bold"/>

        <Image Grid.Row="1" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Source="/Images/girlandboy.png" 
               Width="332" 
               Height="226" 
               IsEnabled="False"/>
    </Grid>
</Page>