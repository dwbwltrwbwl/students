<Page x:Class="students.Pages.Autorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:students.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Autorization">

    <Grid Background="#f0e3fc">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Авторизация" 
                           Width="184" 
                           Foreground="#FF5427D4" 
                           FontSize="20" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center" 
                           Height="34" 
                           FontWeight="Bold" 
                           FontFamily="Gill Sans Ultra Bold"
                           Margin="0,0,0,5"/>

                <TextBlock Text="Введите логин" 
                           Width="154" 
                           Foreground="#FF5427D4" 
                           Height="22" 
                           FontWeight="Bold" 
                           FontFamily="Gill Sans Ultra Bold" 
                           FontSize="14"/>

                <TextBox x:Name="TBLogin" 
                         Width="170" 
                         Height="22" 
                         FontSize="16" 
                         Margin="0,0,0,5" MaxLength="50">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" 
                                                BorderBrush="#FF5427D4" 
                                                BorderThickness="1" 
                                                CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock Text="Введите пароль" 
                           Width="144" 
                           Foreground="#FF5427D4" 
                           Height="24" 
                           FontWeight="Bold" 
                           FontFamily="Gill Sans Ultra Bold" 
                           FontSize="14"/>

                <PasswordBox x:Name="PBPassword" 
                             Width="170" 
                             Height="22" 
                             FontSize="16" 
                             Margin="0,0,0,10" MaxLength="50">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Background="White" 
                                                BorderBrush="#FF5427D4" 
                                                BorderThickness="1" 
                                                CornerRadius="10">
                                            <ScrollViewer x:Name="PART_ContentHost"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <Button x:Name="ButtonVhod" 
                        Width="170" 
                        Height="30" 
                        Content="Войти" 
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="14" 
                        Foreground="White" 
                        Background="#FF5427D4"
                        Click="ButtonVhod_Click"
                        Margin="0,0,0,5">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="#FF5427D4" 
                                                BorderThickness="1" 
                                                CornerRadius="10" 
                                                Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="ButtonRegistr" 
                        Content="Регистрация" 
                        Width="170" 
                        Height="30" 
                        FontFamily="Gill Sans Ultra Bold" 
                        FontSize="14" 
                        Foreground="White" 
                        Background="#FF5427D4"
                        Click="ButtonRegistr_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="#FF5427D4" 
                                                BorderThickness="1" 
                                                CornerRadius="10" 
                                                Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <Image Grid.Row="1" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               Source="/Images/people.png" 
               Width="332" 
               Height="226" 
               IsEnabled="False"/>
    </Grid>
</Page>