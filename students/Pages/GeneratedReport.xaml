<Page x:Class="students.Pages.GeneratedReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:students.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="GeneratedReport">

    <Grid Background="#f0e3fc">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с информацией о студенте -->
        <Border Grid.Row="0" Background="#FF5427D4" Padding="10">
            <StackPanel>
                <TextBlock x:Name="tbStudentName" 
                           Foreground="White"
                           FontSize="20"
                           FontWeight="Bold"
                           TextAlignment="Center"/>
                <TextBlock x:Name="tbGroupInfo"
                           Foreground="White"
                           FontSize="16"
                           TextAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Оценки">
                <ListView x:Name="lvGrades">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Предмет" Width="200" DisplayMemberBinding="{Binding Subject}"/>
                            <GridViewColumn Header="Оценки" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Grades}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Средний балл" Width="100" DisplayMemberBinding="{Binding Average}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>

            <TabItem Header="Посещаемость">
                <ListView x:Name="lvAttendance">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Дата" Width="120" DisplayMemberBinding="{Binding Date, StringFormat=dd.MM.yyyy}"/>
                            <GridViewColumn Header="Предмет" Width="200" DisplayMemberBinding="{Binding Subject}"/>
                            <GridViewColumn Header="Статус" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Неизвестно"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPresent}" Value="True">
                                                            <Setter Property="Text" Value="Присутствовал"/>
                                                            <Setter Property="Foreground" Value="Green"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsPresent}" Value="False">
                                                            <Setter Property="Text" Value="Отсутствовал"/>
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>

        <!-- Статистика -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Общий средний балл: " FontWeight="Bold" Foreground="#FF5427D4"/>
                <TextBlock x:Name="tbTotalAverage" FontWeight="Bold" Margin="5,0" Foreground="#FF5427D4"/>

                <TextBlock Text="Посещаемость: " FontWeight="Bold" Margin="20,0,0,0" Foreground="#FF5427D4"/>
                <TextBlock x:Name="tbAttendancePercent" FontWeight="Bold" Margin="5,0" Foreground="#FF5427D4"/>
            </StackPanel>

            <Button Grid.Column="1" Content="Назад" 
                    Click="BackButton_Click"
                    Foreground="#FF5427D4"
                    Background="Transparent"
                    BorderThickness="0"
                    FontFamily="Gill Sans Ultra Bold"
                    FontSize="14"
                    Padding="5"
                    HorizontalAlignment="Center" Height="27" VerticalAlignment="Top">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF7F5FDB"/>
                                <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Grid>
</Page>
